{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "lmstudio": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "LM Studio (local)",
      "options": {
        "baseURL": "http://127.0.0.1:1234/v1"
      },
      "models": {
        "qwen/qwen2.5-coder-0.5b-instruct-fp16.gguf": {
          "name": "Qwen2.5-Coder-0.5B-Instruct-GGUF"
        }
      }
    }
  },
  "agent": {
    "my-build-agent": {
      "description": "Custom build agent for this project",
      "model": "qwen/qwen2.5-coder-0.5b-instruct-fp16.gguf",
      "prompt": "{file:./prompts/build.txt}",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      }
    }
  }
}
